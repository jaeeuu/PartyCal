{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": [
      "vite-plugin-solid-svg/types-component-solid",
      "vinxi/types/client",
    ],
    "isolatedModules": true,
    "paths": {
      "~/*": ["./src/*"],
    },
    "strictNullChecks": false,
    "noImplicitAny": false,
    "sourceMap": false,
  }
}
